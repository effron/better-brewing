<div id="recipes-index">
  <div id="search-field">
    <%= form_tag recipes_url, method: "get", remote: true do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", name: nil %>
    <% end %>
  </div>
  <div id="recipe-list">
    <h1>All Recipes</h1>
    <%= paginate @recipes %>
    <ul class="recipe-tiles group">
      <%= render @recipes %>
    </ul>
    <%= paginate @recipes %>
  </div>
</div>

<script>
$(function(){
  $(document).on("ajax:success", function(event, data){
    $("#recipe-list").html(data)
    
  })  
})


</script>