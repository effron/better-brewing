
<style>
#recipe-<%= recipe.id %> a{
  background: url(<%= asset_path "beer_pictures/#{[recipe.estimated_color.to_i/3, 8].min }.png" %>) no-repeat;
  background-size: cover;
}
</style>

<li class="recipe-tile" id="recipe-<%= recipe.id %>">
  <a class="group" href="<%= recipe_url(recipe) %>">
    <h2><%= recipe.name %></h2>
    <h3>By <%= recipe.user.username %></h3>
  </a>
  <%= image_tag "shadow.png" %>
</li>