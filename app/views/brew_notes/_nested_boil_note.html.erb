<h2>Boil Notes</h2>
<label for="pre_boil">Pre Boil Volume</label>
<input type="text" id="pre_boil"
       name="brew_note[boil_note_attributes][pre_boil_volume]"
       value="<%= brew_note.boil_note.pre_boil_volume if brew_note.persisted? %>">

<label for="post_boil">Post Boil Volume</label>
<input type="text" id="post_boil"
       name="brew_note[boil_note_attributes][post_boil_volume]"
       value="<%= brew_note.boil_note.post_boil_volume if brew_note.persisted? %>">

<% if brew_note.persisted? %>
<input type="hidden" name="brew_note[boil_note_attributes][id]"
      value="<%= brew_note.boil_note.id %>">
<% end %>