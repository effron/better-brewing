<div id="new-brew-note">
  <h1>Take some notes for <%= @brew_note.recipe.name %></h1>

  <%= form_for @brew_note, url: recipe_brew_notes_url(@brew_note.recipe_id) do |f| %>
    <%= f.label :body, "Notes" %>
    <%= f.text_area :body, cols: 0, rows: 0 %>

    <%= render "nested_mash_notes" %>

    <%= render "nested_boil_note" %>

    <%= render "nested_fermentation_note" %>

    <%= render "nested_bottling_note" %>

    <%= f.hidden_field :recipe_id %>

    <!-- Testing paperclip photo uploading -->
    <%= f.label :beer_photo, "Beer photo" %>
    <%= f.file_field :beer_photo %>

    <%= f.submit "Save note" %>
  <% end %>
</div>